<!DOCTYPE html>
<html lang="en">

<head>
  {{#if title}}
  <title>{{title}} - Kyle Hughes</title>
  {{else}}
  <title>Kyle Hughes</title>
  {{/if}}
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
  <link rel='stylesheet' href='/css/style.css'>
  <script>
      window.addEventListener('DOMContentLoaded', function(loadEvent){
        var mouseX = 0
        var mouseY = 0
        function animate(){
          var x = Date.now()
          var wave = Math.sin(x*5*(Math.sin(x)/2))
                      /4
                      +(
                         Math.cos(x*8)/8
                       )
          var first = 30-((window.innerWidth-mouseX)/120) * (1+wave)
          var second = 70+((window.innerHeight-mouseY)/120) * (1+wave)
          document.querySelector('.lg-first').setAttribute('offset', first+'%')
          document.querySelector('.lg-second').setAttribute('offset', second+'%')
          requestAnimationFrame(animate)
        }
        requestAnimationFrame(animate)
        console.log(1)
      })
  </script>
</head>
<body>
  <header>
    <svg viewBox="0 0 409 150" preserveAspectRatio="xMinYMin" width="100%" xmlns="http://www.w3.org/2000/svg" version="1.1">
      <defs>
        <linearGradient id="titleFill" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop class='lg-first' offset="0%" />
          <stop class='lg-second' offset="100%" />
        </linearGradient>
      </defs>
      <g fill="url(#titleFill)">
        <text transform="translate(0, 64)">
