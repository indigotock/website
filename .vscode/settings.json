{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/src/*.js": {
            "when": "$(basename).ts"
        },
        "out": true,
        "**/jspm_packages": true,
        "**/node_modules": true,
        "**/.DS_Store": true,
        "**/*.js.map": true
    }
}